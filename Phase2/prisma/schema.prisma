// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id              Int      @id @default(autoincrement())
  name            String
  surname         String
  shippingAddress String
  username        String   @unique
  password        String
  moneyBalance    Float
  orders          Order[]
}

model Seller {
  id              Int      @id @default(autoincrement())
  companyName     String
  username        String   @unique
  password        String
  bankAccount     String
  products        Product[]
}
model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
}
model Order {
  id          Int      @id @default(autoincrement())
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  Int
}
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  seller      Seller   @relation(fields: [sellerId], references: [id])
  sellerId    Int
}
